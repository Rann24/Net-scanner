#!/bin/bash

# 1. Ask the user for the subnet (first 3 parts of IP)

echo "Enter the Subnet to scan (e.g., 192.168.1):"
read SUBNET

echo "Scanning $SUBNET.1 through $SUBNET.254..."
echo "This might take a minute..."

# 2. The Loop: Count from 1 to 254

for IP in {1..254}
do
    # 3. Ping the device
    # -c 1 = Ping only once
    # -W 1 = Wait only 1 second (so we don't wait forever for >
    # &> /dev/null = Hide the messy text output


    ping -c 1 -W 1 "$SUBNET.$IP" &> /dev/null

    # 4. Check if it worked
    # $? is a special variable that holds the "Exit Code" of t>
    # 0 = Success (Alive), anything else = Failure (Dead)


    if [ $? -eq 0 ]
    then
        echo "Device found: $SUBNET.$IP"
    fi
done
